<h2><%= @message.title %></h2>
<h5>Posted by <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %> ago</h5>
<p><%= @message.description %></p>

<% if user_signed_in? %>
  <% if @message.user_id == current_user.id %>
  <%= link_to "Edit", edit_message_path %>
  <%= link_to "Delete", message_path, method: :delete, data: {confirm: "are u sure?"} %>
  <% end %>
<% end %>


<br>
<h3>Comentarios:</h3>
<%= render @message.comments %>
<br>
<h3>Responder comentario:</h3>
<%= render 'comments/form' %>